<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_margin="@dimen/glass_card_margin"
              android:orientation="vertical">

    <TextView
        android:id="@+id/wifi_missing"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center_horizontal"
        android:text="@string/connect_to_wifi"
        android:textSize="36sp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/scan_code_prompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/scan_code_prompt"
        android:textSize="36sp"/>

    <ImageView
        android:id="@+id/scan_code_prompt_icon"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:src="@android:drawable/ic_menu_camera"/>

</LinearLayout>